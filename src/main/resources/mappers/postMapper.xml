<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.marondalgram.post.dao.PostDAO">
	<select id="selectPostList" resultType="com.marondalgram.post.model.Post">
		SELECT 
			`id`
			, `userId`
			, `userNickName`
			, `content`
			, `imagePath`
			, `location`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		ORDER BY
			`createdAt` DESC
	</select>
	
	<select id="selectPostBypostId" parameterType="int" resultType="com.marondalgram.post.model.Post">
		SELECT 
			`id`
			, `userId`
			, `userNickName`
			, `content`
			, `imagePath`
			, `location`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{id}
	</select>
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			, `userNickName`
			, `content`
			, `imagePath`
<!-- 			, `location` -->
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{userNickName}
			, #{content}
			, #{imagePath}
<!-- 			, #{location} -->
			, NOW()
			, NOW()
		)
	</insert>
	
	<delete id="deletePost" parameterType="int">
		DELETE
		FROM
			`post`
		WHERE
			`id` = #{id}
	</delete>
</mapper>